{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "privatelinktest-adf"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/ag2toag1')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy AG2 to AG1",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "JsonSource",
								"storeSettings": {
									"type": "AzureBlobStorageReadSettings",
									"recursive": true,
									"enablePartitionDiscovery": false
								},
								"formatSettings": {
									"type": "JsonReadSettings"
								}
							},
							"sink": {
								"type": "JsonSink",
								"storeSettings": {
									"type": "AzureBlobFSWriteSettings"
								},
								"formatSettings": {
									"type": "JsonWriteSettings"
								}
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "AG2_data",
								"type": "DatasetReference",
								"parameters": {
									"SourceAccountName": {
										"value": "@pipeline().parameters.SourceAccountName",
										"type": "Expression"
									},
									"SourceAccountKeyVaultSecret": {
										"value": "@pipeline().parameters.SourceAccountKVSecret",
										"type": "Expression"
									}
								}
							}
						],
						"outputs": [
							{
								"referenceName": "AG1_store",
								"type": "DatasetReference"
							}
						]
					}
				],
				"parameters": {
					"test": {
						"type": "string",
						"defaultValue": "test"
					},
					"test2": {
						"type": "string",
						"defaultValue": "random"
					},
					"SourceAccountName": {
						"type": "String"
					},
					"SourceAccountKVSecret": {
						"type": "String"
					}
				},
				"annotations": [],
				"lastPublishTime": "2021-09-01T07:59:45Z"
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/AG2_data')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/AG2_data')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "BlobLS",
					"type": "LinkedServiceReference",
					"parameters": {
						"BlobStoreName": {
							"value": "@dataset().SourceAccountName",
							"type": "Expression"
						},
						"BlobStoreSecretId": {
							"value": "@dataset().SourceAccountKeyVaultSecret",
							"type": "Expression"
						}
					}
				},
				"parameters": {
					"SourceAccountName": {
						"type": "String"
					},
					"SourceAccountKeyVaultSecret": {
						"type": "String"
					}
				},
				"annotations": [],
				"type": "Json",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "demoz.json",
						"folderPath": "Hello",
						"container": "datacontainer"
					}
				},
				"schema": {
					"type": "object",
					"properties": {
						"hello": {
							"type": "string"
						}
					}
				}
			},
			"dependsOn": []
		}
	]
}